@inject IStringLocalizer<App> L

<DashedList Class="@Class" Items="@Items"/>

@code {

    [Parameter]
    public string? Class { get; set; }

    [Parameter]
    public AnswerRatio Value { get; set; } = default!;

    private DashedList.Item[] Items => new[]
    {
        new DashedList.Item(L["Questions:Answered"], Value.Answered.ToReadable()),
        new DashedList.Item(L["Questions:NotAnswered"], Value.NotAnswered.ToReadable()),
        new DashedList.Item(L["Questions:Correct"], Value.Correct.ToReadable()),
        new DashedList.Item(L["Questions:Incorrect"], Value.Incorrect.ToReadable()),
        new DashedList.Item(L["Questions:Total"], Value.Questions.ToReadable())
    };

}
