@using Elwark.Education.Web.Gateways.Models.Test
@inject IStringLocalizer<App> L

<DashedList Class="@Class" Items="@Items"/>

@code {

    [Parameter]
    public string? Class { get; set; }

    [Parameter]
    public NumberOfTests Value { get; set; } = default!;

    private DashedList.Item[] Items => new[]
    {
        new DashedList.Item(L["NumberOfTests:Completed"], Value.Completed.ToReadable()),
        new DashedList.Item(L["NumberOfTests:RepliesExceeded"], Value.RepliesExceeded.ToReadable()),
        new DashedList.Item(L["NumberOfTests:TimeExceeded"], Value.TimeExceeded.ToReadable()),
        new DashedList.Item(L["NumberOfTests:Total"], Value.Total.ToReadable())
    };

}
