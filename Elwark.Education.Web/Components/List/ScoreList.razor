@inject IStringLocalizer<App> L

<DashedList Class="@Class" Items="@Items"/>

@code {

    [Parameter]
    public string? Class { get; set; }

    [Parameter]
    public Score Value { get; set; } = default!;

    private DashedList.Item[] Items => new[]
    {
        new DashedList.Item(L["Score:ByQuestions"], Value.Questions.ToReadable()),
        new DashedList.Item(L["Score:BySpeedBonus"], Value.Speed.ToReadable()),
        new DashedList.Item(L["Score:NoMistakesBonus"], Value.NoMistakes.ToReadable()),
        new DashedList.Item(L["Score:Total"], Value.Total.ToReadable())
    };

}
