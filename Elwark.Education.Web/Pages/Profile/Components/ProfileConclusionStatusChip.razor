@* ReSharper disable once CheckNamespace *@
@namespace Elwark.Education.Web.Components

@using Elwark.Education.Web.Gateways.Models.TestConclusion
@inject IStringLocalizer<App> L

@switch (Status)
{
    case ConclusionStatus.Complete:
        <MudChip Label="true" Color="Color.Success" Size="Size.Small">
            @L["CompletedTests:Completed"]
        </MudChip>
        break;
        
    case ConclusionStatus.TimeExceeded:
        <MudChip Label="true" Color="Color.Error" Size="Size.Small">
            @L["CompletedTests:TimeExceeded"]
        </MudChip>
        break;
        
    case ConclusionStatus.RepliesExceeded:
        <MudChip Label="true" Color="Color.Warning" Size="Size.Small">
            @L["CompletedTests:RepliesExceeded"]
        </MudChip>
        break;
}

@code {

    [Parameter]
    public ConclusionStatus Status { get; set; }

}