@page "/profile/history"
@layout ProfileLayout
@using Elwark.Education.Web.Gateways.History
@using Elwark.Education.Web.Gateways.Models.Statistics
@inject IHistoryClient HistoryClient
@inject IStringLocalizer<App> L

@switch (_statistics.Status)
{
    case ResponseStatus.Loading:
        <PageLoader/>
        break;

    case ResponseStatus.Fail:
        <ErrorPage Error="_statistics.Error"/>
        break;

    case ResponseStatus.Success:
        <SubjectHeader Subject="@Subject.History"/>

        <MudText Typo="Typo.h5" Class="mb-2 mt-6">
            Statistics by topics
        </MudText>
        <div class="statistics-grid">
            <div class="topics-icon-widget-grid">
                <IconWidget
                    Icon="@Filled.School"
                    Title="@L["PassedTests"]"
                    Value="@_statistics.Data.Topics.PassedTests"/>

                <IconWidget
                    Icon="@Filled.Timer"
                    Title="@L["TimeSpent"]"
                    Value="@_statistics.Data.Topics.TimeSpent.ToSimpleFormat()"/>

                <IconWidget
                    Icon="@Filled.Accessibility"
                    Title="@L["CurrentTopics"]"
                    Value="@_statistics.Data.Topics.TopicsProgress.Current"/>

                <IconWidget
                    Icon="@Filled.Accessibility"
                    Title="@L["PassedTopics"]"
                    Value="@_statistics.Data.Topics.TopicsProgress.Passed"/>
            </div>

            <DetailWidget
                Icon="@Filled.PendingActions"
                Value="@_statistics.Data.Topics.Score.Total"
                Title="@L["Score"]"
                SubTitle="@DateTime.UtcNow.ToSimpleFormat()">
                <Details>
                    <div class="detail-grid">
                        <div>
                            <MudText Typo="Typo.h6" Align="Align.Center">
                                @_statistics.Data.Topics.Score.Questions
                            </MudText>
                            <MudText Typo="Typo.body1" Align="Align.Center">
                                @L["By questions"]
                            </MudText>
                        </div>
                        <div>
                            <MudText Typo="Typo.h6" Align="Align.Center">
                                @_statistics.Data.Topics.Score.NoMistakes
                            </MudText>
                            <MudText Typo="Typo.body1" Align="Align.Center">
                                @L["No mistakes bonus"]
                            </MudText>
                        </div>
                        <div>
                            <MudText Typo="Typo.h6" Align="Align.Center">
                                @_statistics.Data.Topics.Score.Speed
                            </MudText>
                            <MudText Typo="Typo.body1" Align="Align.Center">
                                @L["Speed bonus"]
                            </MudText>
                        </div>
                    </div>
                </Details>
            </DetailWidget>

            <DetailWidget
                Icon="@Filled.HelpOutline"
                Value="@_statistics.Data.Topics.AnswerRatio.Questions"
                Title="@L["Questions"]"
                SubTitle="@DateTime.UtcNow.ToSimpleFormat()">
                <Details>
                    <div class="detail-grid">
                        <div>
                            <MudText Typo="Typo.h6" Align="Align.Center">
                                @_statistics.Data.Topics.AnswerRatio.Correct
                            </MudText>
                            <MudText Typo="Typo.body1" Align="Align.Center">
                                @L["Correct"]
                            </MudText>
                        </div>
                        <div>
                            <MudText Typo="Typo.h6" Align="Align.Center">
                                @_statistics.Data.Topics.AnswerRatio.Incorrect
                            </MudText>
                            <MudText Typo="Typo.body1" Align="Align.Center">
                                @L["Incorrect"]
                            </MudText>
                        </div>
                        <div>
                            <MudText Typo="Typo.h6" Align="Align.Center">
                                @_statistics.Data.Topics.AnswerRatio.Answered
                            </MudText>
                            <MudText Typo="Typo.body1" Align="Align.Center">
                                @L["Answered"]
                            </MudText>
                        </div>
                        <div>
                            <MudText Typo="Typo.h6" Align="Align.Center">
                                @_statistics.Data.Topics.AnswerRatio.NotAnswered
                            </MudText>
                            <MudText Typo="Typo.body1" Align="Align.Center">
                                @L["Not answered"]
                            </MudText>
                        </div>
                    </div>
                </Details>
            </DetailWidget>

            <RankingWidget
                Title="Score ranking"
                Items="@_statistics.Data.Topics.ScoreRanking"
                LinkBuilder="@((string id) => Links.History.Topic(id))"/>

            <RankingWidget
                Title="Time spent ranking"
                Items="@_statistics.Data.Topics.TimeSpentRanking"
                LinkBuilder="@((string id) => Links.History.Topic(id))"
                ValueConverter="@((TimeSpan item) => item.ToSimpleFormat())"/>

            <RankingWidget
                Title="Test passed times ranking"
                Items="@_statistics.Data.Topics.TestPassedTimesRanking"
                LinkBuilder="@((string id) => Links.History.Topic(id))"/>
        </div>

        <MudText Typo="Typo.h5" Class="mb-2 mt-12">
            Statistics by articles
        </MudText>
        <div class="statistics-grid mb-6">
            <div class="articles-icon-widget-grid">
                <IconWidget
                    Icon="@Filled.School"
                    Title="@L["PassedTests"]"
                    Value="@_statistics.Data.Articles.PassedTests"/>

                <IconWidget
                    Icon="@Filled.Timer"
                    Title="@L["TimeSpent"]"
                    Value="@_statistics.Data.Articles.TimeSpent.ToSimpleFormat()"/>
            </div>

            <DetailWidget
                Icon="@Filled.PendingActions"
                Value="@_statistics.Data.Articles.Score.Total"
                Title="@L["Score"]"
                SubTitle="@DateTime.UtcNow.ToSimpleFormat()">
                <Details>
                    <div class="detail-grid">
                        <div>
                            <MudText Typo="Typo.h6" Align="Align.Center">
                                @_statistics.Data.Articles.Score.Questions
                            </MudText>
                            <MudText Typo="Typo.body1" Align="Align.Center">
                                @L["By questions"]
                            </MudText>
                        </div>
                        <div>
                            <MudText Typo="Typo.h6" Align="Align.Center">
                                @_statistics.Data.Articles.Score.NoMistakes
                            </MudText>
                            <MudText Typo="Typo.body1" Align="Align.Center">
                                @L["No mistakes bonus"]
                            </MudText>
                        </div>
                        <div>
                            <MudText Typo="Typo.h6" Align="Align.Center">
                                @_statistics.Data.Articles.Score.Speed
                            </MudText>
                            <MudText Typo="Typo.body1" Align="Align.Center">
                                @L["Speed bonus"]
                            </MudText>
                        </div>
                    </div>
                </Details>
            </DetailWidget>

            <DetailWidget
                Icon="@Filled.HelpOutline"
                Value="@_statistics.Data.Articles.AnswerRatio.Questions"
                Title="@L["Questions"]"
                SubTitle="@DateTime.UtcNow.ToSimpleFormat()">
                <Details>
                    <div class="detail-grid">
                        <div>
                            <MudText Typo="Typo.h6" Align="Align.Center">
                                @_statistics.Data.Articles.AnswerRatio.Correct
                            </MudText>
                            <MudText Typo="Typo.body1" Align="Align.Center">
                                @L["Correct"]
                            </MudText>
                        </div>
                        <div>
                            <MudText Typo="Typo.h6" Align="Align.Center">
                                @_statistics.Data.Articles.AnswerRatio.Incorrect
                            </MudText>
                            <MudText Typo="Typo.body1" Align="Align.Center">
                                @L["Incorrect"]
                            </MudText>
                        </div>
                        <div>
                            <MudText Typo="Typo.h6" Align="Align.Center">
                                @_statistics.Data.Articles.AnswerRatio.Answered
                            </MudText>
                            <MudText Typo="Typo.body1" Align="Align.Center">
                                @L["Answered"]
                            </MudText>
                        </div>
                        <div>
                            <MudText Typo="Typo.h6" Align="Align.Center">
                                @_statistics.Data.Articles.AnswerRatio.NotAnswered
                            </MudText>
                            <MudText Typo="Typo.body1" Align="Align.Center">
                                @L["Not answered"]
                            </MudText>
                        </div>
                    </div>
                </Details>
            </DetailWidget>

            <RankingWidget
                Title="Score ranking"
                Items="@_statistics.Data.Articles.ScoreRanking"
                LinkBuilder="@((string id) => Links.History.Article(id))"/>

            <RankingWidget
                Title="Time spent ranking"
                Items="@_statistics.Data.Articles.TimeSpentRanking"
                LinkBuilder="@((string id) => Links.History.Article(id))"
                ValueConverter="@((TimeSpan item) => item.ToSimpleFormat())"/>

            <RankingWidget
                Title="Test passed times ranking"
                Items="@_statistics.Data.Articles.TestPassedTimesRanking"
                LinkBuilder="@((string id) => Links.History.Article(id))"/>
        </div>
        break;
}

@code {
    private ApiResponse<ContentStatistics> _statistics = ApiResponse<ContentStatistics>.Loading();

    protected override async Task OnInitializedAsync() =>
        _statistics = await HistoryClient.GetMyStatisticsAsync();

}