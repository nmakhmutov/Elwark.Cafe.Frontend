@page "/"

<AuthorizeView>
    <Authorized>
        <MudContainer MaxWidth="MaxWidth.Small" Class="mx-auto">
            <MudText Typo="Typo.h4" Align="Align.Center" Class="my-6">
                Choose your favorite subject
            </MudText>
            <MudText Typo="Typo.subtitle1" Align="Align.Center">
