@using Elwark.Education.Web.Gateways.Models.TestConclusion
@using Elwark.Education.Web.Gateways.Models.Test
@inject IStringLocalizer<App> L

<div class="wrapper">
    <div>
        @if (Title is null)
        {
            <MudText Typo="Typo.h5">
                @L["Deleted"]
            </MudText>
        }
        else
        {
            <MudLink Href="@Link" Typo="Typo.h5">
                @Title
            </MudLink>
        }
        <MudText Typo="Typo.body1">
            @L[$"Test:{Difficulty}"]
        </MudText>
    </div>
    <div class="status">
        <ConclusionStatusTitle Status="@Status"/>
        <MudText Typo="Typo.body1">
            @CompletedAt.ToSimpleFormat()
        </MudText>
    </div>
</div>

@code {

    [Parameter]
    public string? Title { get; set; }

    [Parameter]
    public string Link { get; set; } = default!;

    [Parameter]
    public ConclusionStatus Status { get; set; }

    [Parameter]
    public TestDifficulty Difficulty { get; set; }

    [Parameter]
    public DateTime CompletedAt { get; set; }

}
