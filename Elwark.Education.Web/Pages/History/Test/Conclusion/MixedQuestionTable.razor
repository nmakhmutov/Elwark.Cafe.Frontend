@using Elwark.Education.Web.Gateways.History.Test

<MudTable Items="@Questions" Hover="true" Breakpoint="Breakpoint.Sm">
    <HeaderContent>
        <MudTh>
            @L["Topic"]
        </MudTh>
        <MudTh>
            @L["Question"]
        </MudTh>
        <MudTh>
            @L["Question:IsAnswered"]
        </MudTh>
        <MudTh>
            @L["Question:IsCorrect"]
        </MudTh>
    </HeaderContent>
    <RowTemplate>
        <MudTd DataLabel="@L["Topic"]">
            <MudLink Href="@Links.Subject.History.Topic(context.Topic.Id)">
                @context.Topic.Title
            </MudLink>
        </MudTd>
        <MudTd DataLabel="@L["Question"]">
            @context.Title
        </MudTd>
        <MudTd DataLabel="@L["Question:IsAnswered"]">
            <MudCheckBox ReadOnly="true" Checked="@context.IsAnswered"/>
        </MudTd>
        <MudTd DataLabel="@L["Question:IsCorrect"]">
            <MudCheckBox ReadOnly="true" Checked="@context.IsCorrect"/>
        </MudTd>
    </RowTemplate>
</MudTable>

@code {

    [Inject]
    private IStringLocalizer<App> L { get; set; } = default!;

    [Parameter]
    public MixedTestConclusion.Question[] Questions { get; set; } = Array.Empty<MixedTestConclusion.Question>();

}
