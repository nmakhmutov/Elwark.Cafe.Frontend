@using Elwark.Education.Web.Gateways.Models.History
@inject IStringLocalizer<App> L

<article class="card">
    <a href="@Href" class="card-link"></a>
    <img src="@Image" alt="@Title" class="image">
    <div class="text-wrapper">
        <h2 class="title">@Title</h2>
        <div class="details-wrapper">
            <HistoryPeriodChip Class="chip" Period="@Period"/>
            <div class="rating">
                <RatingIcon Placement="@Placement.Top" Rating="@Rating"/>
            </div>
        </div>
    </div>
</article>

@code {

    [Parameter]
    public string Image { get; set; } = string.Empty;

    [Parameter]
    public string Href { get; set; } = string.Empty;

    [Parameter]
    public string Title { get; set; } = string.Empty;

    [Parameter]
    public string Subtitle { get; set; } = string.Empty;

    [Parameter]
    public HistoryPeriodType Period { get; set; }

    [Parameter]
    public ContentRating Rating { get; set; } = default!;

}
