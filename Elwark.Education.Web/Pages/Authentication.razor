@page "/authentication/{action}"
@using Elwark.Education.Web.Gateways.User

<RemoteAuthenticatorView Action="@Action" OnLogInSucceeded="@OnSuccessCallback"/>

@code{

    [Inject]
    private IUserClient UserClient { get; set; } = default!;

    [Parameter]
    public string? Action { get; set; }

    private Task OnSuccessCallback() => UserClient.CreateAsync();

}
