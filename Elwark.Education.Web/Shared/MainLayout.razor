@using MudBlazor.Theme.Defaults
@inherits LayoutComponentBase

<MudThemeProvider Theme="_currentTheme"/>
<MudDialogProvider/>
<MudSnackbarProvider/>

<MudLayout Style="min-height: 100vh">
    <MudAppBar Elevation="25">
        <MudIconButton Icon="@Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@(_ => DrawerToggle())"/>
        <MudLink Href="@Links.Index">
            <img src="http://localhost:3000/static/icons/elwark/white/32x32.png" alt="logo"/>
        </MudLink>
        <MudAppBarSpacer/>
        <MudTooltip Text="Toggle theme">
            <MudIconButton Icon="@_themeIcon" Color="Color.Inherit" OnClick="@(_ => SwitchTheme())"/>
        </MudTooltip>
    </MudAppBar>
    <MudDrawer Open="@_drawerOpen" Clipped="true" Elevation="25">
        <AuthorizeView>
            <Authorized>
                <MudDrawerHeader Class="appbar-band">
                    <MudAvatar Image="@(context.User.Claims.First(x => x.Type == "picture").Value)" Size="Size.Large"/>
                    <MudText Typo="Typo.subtitle1" Class="mt-2">
                        @context.User.Identity?.Name
                    </MudText>
                </MudDrawerHeader>
            </Authorized>
        
            <Authorizing>
                <MudSkeleton SkeletonType="SkeletonType.Circle" Width="56px" Height="56px" Style="margin: 10px auto"/>
                <MudSkeleton SkeletonType="SkeletonType.Text" Width="90%" Style="margin: 0 auto"/>
            </Authorizing>
        
        </AuthorizeView>
        <NavMenu/>
    </MudDrawer>
    <MudMainContent Class="main-content">
        @Body
    </MudMainContent>
</MudLayout>

@code {

    bool _drawerOpen = false;
    MudTheme _currentTheme = new();
    string _themeIcon = Filled.Brightness7;

    void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }

    protected override void OnInitialized()
    {
        _currentTheme = _defaultTheme;
    }

    void SwitchTheme()
    {
        if (_currentTheme == _defaultTheme)
        {
            _currentTheme = _darkTheme;
            _themeIcon = Filled.Brightness3;
        }
        else
        {
            _currentTheme = _defaultTheme;
            _themeIcon = Filled.Brightness7;
        }
    }

    private readonly MudTheme _defaultTheme = new()
    {
        Palette = new Palette
        {
            Black = "#272c34",
            Primary = "#3f51b5",
            Background = "#F4F6F8",
            AppbarBackground = "#3f51b5",
        }
    };

    private readonly MudTheme _darkTheme = new()
    {
        Palette = new Palette
        {
            Primary = "#3f51b5",
            Black = "#27272f",
            Background = "#32333d",
            BackgroundGrey = "#27272f",
            Surface = "#373740",
            DrawerBackground = "#27272f",
            DrawerText = "rgba(255,255,255, 0.50)",
            AppbarBackground = "#27272f",
            AppbarText = "rgba(255,255,255, 0.70)",
            TextPrimary = "rgba(255,255,255, 0.70)",
            TextSecondary = "rgba(255,255,255, 0.50)",
            ActionDefault = "#adadb1",
            ActionDisabled = "rgba(255,255,255, 0.26)",
            ActionDisabledBackground = "rgba(255,255,255, 0.12)",
            DrawerIcon = "rgba(255,255,255, 0.50)"
        }
    };

}